{
  "name": "Stickers Minimizer",
  "short_name": "StickMin",
  "description": "Minimizes stickers in Facebook Messenger chats",
  "version": "1.0",
  "author": "Radu F",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "tabs",
    "https://*.facebook.com/"
  ],
  "icons": { "16": "/assets/icon16.png",
           "48": "/assets/icon48.png",
          "128": "/assets/icon128.png" },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Facebook Messenger stickers minimizer"
  },

  "options_page": "options.html",

  "manifest_version": 2
}
